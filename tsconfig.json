{
    "compilerOptions": {
        "baseUrl": "./",
        "target": "esnext",
        "module": "esnext",
        "moduleResolution": "node",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "resolveJsonModule": true,
        "lib": ["esnext", "dom", "esnext.asynciterable"], // Add Node.js features like AsyncIterables
        "jsx": "react",
        "types": ["node"],  // Include Node.js types
        "paths": {
        "@/*": ["src/*"]
        }
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist"]
}
  